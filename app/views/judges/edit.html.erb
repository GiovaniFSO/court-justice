<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @judge, url: judge_path do |form| %>
    <% @judge.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>

    <div class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email' %>
    </div>

    <div class="text-field">
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <div class="text-field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>
